<%= form_for @pay do |f| %>
<div class="nav1">
  <div class="inner1 font-beba-small">
    <span style="color:white;">Login Details</span>
  </div>
  <div class="inner1 font-beba-small">
    <span style="color:white;">Personal Details</span>
  </div>
  <div class="inner1 active20 font-beba-small">
    <span style="color:white;">Salary Details</span>
  </div>
</div>
  <table class="table table-striped table-dark">
    <tr>
      <td><%= f.label "Basic Pay" %></td>
      <td><%= f.number_field :basic, :min=>0%><span style="color:white;"><%= @pay.errors[:basic][0] rescue nil%></span></td>
      <td colspan="2"></td>
    </tr>

    <tr>

      <td><%= f.label "Reimbursment" %></td>
      <td><%= f.number_field :reimb, :min=>0%><span style="color:white;"><%= @pay.errors[:reimb][0] rescue nil%></span></td>
      <td colspan="2"></td>
    </tr>
    <tr>
      <td colspan="4"><b>DEDUCTIONS</b></td>
    </tr>

    <tr>
      <td><%= f.label "Number of Leaves in days" %></td>
      <td><%= f.number_field :days, :min=>0%><span style="color:white;"><%= @pay.errors[:days][0] rescue nil%></span></td>
      <td colspan="2"></td>
    </tr>
    <tr>
      <td><%= f.label "Other Deductions" %></td>
      <td><%= f.number_field :deduction, :min=>0%><span style="color:white;"><%= @pay.errors[:deduction][0] rescue nil%></span></td>
      <td colspan="2"></td>
    </tr>
    <tr>
      <td><%= f.submit "Submit" %></td>
      <td colspan="3"></td>
    </tr>
  </table>
<% end %>
